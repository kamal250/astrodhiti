---
import MainLayout from '../layouts/main-layout.astro'
import QuoteText from '../components/quote.tsx'
import  Facebook  from '../icons/facebook.tsx';
import  Twitter  from '../icons/twitter.tsx';
import  LinkedIn  from '../icons/linkedin.tsx';
import Instagram  from '../icons/instagram.tsx';

---


<MainLayout title = 'Astrodhiti - About'>

  <!-- Banner Section -->

  <section class="w-full bg-about h-[50vh] flex justify-center items-end">
    <div class="py-[30px] lg:py-[41px] px-[60px] lg:px-[152px] flex flex-col justify-center items-center bg-white rounded-tl-[37px] rounded-tr-[37px] gap-2.5">
      <h1 class="text-[30px] leading-[40px] lg:text-[50px] lg:leading-[62px] font-dm capitalize text-primary-200 ">About Me</h1>
      <p class="text-base lg:text-[22px] lg:leading-[33px] tracking-tight font-jost text-text-gray"> <a href="/">Home</a> / About </p>
    </div>
  </section>

  <!-- Quote Section -->

  <section class="w-full px-12 lg:px-0 pt-[100px] lg:pt-[200px] lg:max-w-[1200px] mx-auto flex items-center justify-center">
    <QuoteText text="Transforming lives through Astrology" name="Astro Arun Pandit"/>
  </section>

  <!-- What We Do Section -->

  <section class="w-full pt-[100px] lg:pt-[150px] px-12 lg:px-0 mx-auto lg:max-w-[1200px] ">
    <div class="w-full flex flex-col-reverse lg:flex-row justify-between gap-10 items-center">
      <div class="flex flex-col gap-6">
        <h2 class="text-[30px] text-center lg:text-left font-dm tracking-wide capitalize leading-8 md:leading-[62.50px] md:text-[50px] text-text-blue ">My Journey</h2>
        <p class="text-base md:text-[22px] lg:max-w-[85%] text-center lg:text-left tracking-tight font-jost text-text-gray leading-[33px]">I am deeply passionate about the interconnectedness of the cosmos and its influence on our individual lives, a fascination that has led me to immerse myself in the studies of numerology and astrology.</p>
      </div>
      <div class="rounded-[32px] overflow-hidden">
        <img src="/marcel-eberle-rendLSpkDtY-unsplash.jpg" alt="Cosmic journey illustration">
      </div>
    </div>
  </section>

  <!-- The End Result Section -->

   <section class="w-full pt-[100px] lg:pt-[150px] px-12 lg:px-0 mx-auto lg:max-w-[1200px] ">
    <div class="w-full flex flex-col-reverse lg:flex-row-reverse justify-between gap-24 items-center">
      <div class="flex flex-col gap-6">
        <h2 class="text-[30px] text-center lg:text-left font-dm tracking-wide capitalize leading-8 md:leading-[62.50px] md:text-[50px] text-text-blue ">My Philosophy</h2>
        <p class="text-base md:text-[22px] lg:max-w-[95%] text-center lg:text-left tracking-tight font-jost text-text-gray leading-[33px]">Above all, I consider myself a lifelong student. The pursuit of knowledge is a continuous journey, and I am driven by an insatiable curiosity to explore new perspectives, refine my techniques, and stay at the forefront of developments in my field.</p>
      </div>
      <div class="rounded-[32px] overflow-hidden">
        <img src="/patrick-hendry-NPNHz-Fkd6s-unsplash.jpg" alt="Lifelong learning illustration" />
      </div>
    </div>
  </section>

</MainLayout>

<style>

  /* Hide scrollbar for Chrome, Safari and Opera */
  .no-scrollbar::-webkit-scrollbar {
      display: none;
  }

  /* Hide scrollbar for IE, Edge and Firefox */
  .no-scrollbar {
      -ms-overflow-style: none;  /* IE and Edge */
      scrollbar-width: none;  /* Firefox */
  }

</style>