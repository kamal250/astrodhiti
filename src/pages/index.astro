---
import MainLayout from '../layouts/main-layout.astro'
import Button from '../components/button.tsx'
import ArrowSec from '../icons/arrow-sec.tsx'
import CallIcon from "../icons/call.tsx"
import Experience from '../components/experience.tsx'


const services = [
	{
		title: 'Kundli Analysis',
		text: 'Comprehensive Kundli analysis to provide insights into your personality, life path, and potential.'
	},
	{
		title: 'Numerology',
		text: 'Personalized numerology services using your birth date and name for deeper self-understanding.'
	},
	{
		title: 'Dasha Analysis',
		text: 'Using Vedic astrology principles to analyze your Dasha system and reveal significant life events.'
	},
]

const reviews = [
	{
		name: 'Kamal Joshi',
		review: 'I was always curious about numerology, and Astro Dhiti\'s reading was eye-opening. The insights into my life path and personality were incredibly accurate. Highly recommend!'
	},
	{
		name: 'Xenia Patel',
		review: 'I was going through a difficult time, and Astro Dhiti\'s astrological guidance provided much-needed clarity and support. The reading was compassionate and insightful.'
	},
	{
		name: 'Nehaben Raval',
		review: 'I was feeling lost and unsure about my future, but Astro Dhiti\'s guidance through numerology and astrology helped me find clarity and direction. Their readings are empowering and insightful.'
	},
]

const experiences = [
	{
		num: 5,
		text:'Certifications'
	},
	{
		num: 50,
		text:'Readings Done'
	},
	{
		num: 2,
		text:'Years Studying'
	}
]

---

<MainLayout title = 'AstroDhiti - Vedic Astrology, Numerology, Child Astrology & Name Correction Expert'>

	<!-- Banner -->
	
	<section class="w-full bg-hero bg-no-repeat bg-cover h-screen lg:min-h-[110vh] px-12 xl:px-0 flex items-center ">
		<div class="lg:max-w-[1200px] w-full mx-auto flex flex-col">
			<h1 class="text-[40px] leading-[50px] md:text-[60px] xl:text-[85px] pb-4 font-dm md:leading-[106.25px] w-full xl:max-w-[50%] text-primary-300"> Discover Your Cosmic Blueprint </h1>
			<p class="text-base md:text-[22px] pb-5 font-jost text-text-gray-300 w-full lg:max-w-[50%]">Unlock the ancient wisdom of numerology and astrology to gain clarity, balance, and transformation in your life.</p>
			<a href="/contact" class="rounded-[18px] flex capitalize items-center justify-center gap-[9px] w-fit text-white text-base lg:text-lg font-semibold font-['Jost'] leading-snug tracking-tight px-10 py-5 md:px-[54px] md:py-[26px] bg-primary-200">Contact Now <ArrowSec /></a>
		</div>
	</section>

	<!-- Services Section -->

	<section class="lg:max-w-[1200px] flex flex-col gap-8 lg:gap-10 lg:flex-row px-12 xl:px-0 w-full mx-auto pt-[100px] lg:pt-[200px] justify-between ">
		{
			services.map((service) => {
				return (
					<div class="w-full max-w-[358px] mx-auto flex flex-col justify-center items-center gap-3 md:gap-5">
						<h3 class="text-text-blue font-dm text-[22px] md:text-[25px] leading-loose">{service.title}</h3>
						<p class="text-base md:text-[22px] tracking-tight font-jost text-text-gray leading-[33px] text-center"> {service.text}</p>
						<a href="/services" class="text-text-gray-200 leading-snug text-lg tracking-tight font-jost font-semibold gap-2 py-4 md:py-8 startCenter">Read More <ArrowSec /></a>
					</div>
				)
			})
		}
	</section>

	<!-- About Section -->

	<section class="w-full lg:max-w-[1200px] mx-auto px-12 xl:px-0 flex flex-col-reverse justify-center items-center lg:grid grid-cols-2 gap-[75px] pt-[100px] lg:pt-[200px]">
		<div class="flex flex-col gap-8 max-w-[472px] items-center lg:items-start py-6">
			<h2 class="text-[30px] text-center capitalize lg:text-left font-dm tracking-wide leading-8 md:leading-[62.50px] md:text-[50px] text-text-blue ">Hello! I am Astro Dhiti</h2>
			<p class="text-base md:text-[22px] text-center lg:text-left tracking-tight font-jost text-text-gray leading-[33px]">Aspiring Numerologist, Astrologer & Tutor deeply passionate about the interconnectedness of the cosmos and its influence on our individual lives.</p>
			<div class="flex gap-4 pt-3 items-center">
				<CallIcon/>
				<p class="flex flex-col text-text-gray-200 font-jost tracking-tight">
					<span class="text-2xl font-bold leading-9 ">Contact Me</span>
					<span class="text-[22px] leading-8">For Consultations</span>
				</p>
			</div>
			<a href="/contact" class="rounded-[18px] flex capitalize items-center justify-center gap-[9px] w-fit text-white text-base lg:text-lg font-semibold font-['Jost'] leading-snug tracking-tight px-10 py-5 md:px-[54px] md:py-[26px] bg-primary-200">Get In Touch <ArrowSec /></a>
		</div>

		<div>
			<img src="/josh-rangel-aDmYkVd6rs4-unsplash.jpg" alt="" />
		</div>
	</section>

	<!-- What People Think About Me Section -->

	<section class="lg:max-w-[1200px] px-12 xl:px-0 w-full mx-auto pt-[100px] lg:pt-[200px] ">
	<div class="w-full flex flex-col bg-primary-300 rounded-[48px] px-6 py-[88px]">
		<h2 class="font-dm tracking-wide text-center leading-[37px] lg:leading-[62.50px] text-[30px] lg:text-[50px] w-full lg:max-w-[50%] pb-9 mx-auto">What the People Thinks About Me</h2>
		<div class="flex flex-col gap-8 lg:gap-10 lg:flex-row justify-between">
			{
			reviews.map((rev) => {
				return (
					<div class="w-full bg-white max-w-[370px] px-[37px] py-[53px] rounded-3xl mx-auto flex flex-col justify-center gap-4 md:gap-6">
						<div class="flex flex-col sm:flex-row gap-6 items-center">
							<p class="flex flex-col tracking-tight leading-9">
								<span class="text-primary-200 text-lg lg:text-[25px] font-dm">{rev.name}</span>
							</p>
						</div>
						<p class="font-jost tracking-tight leading-8 text-base text-center sm:text-left text-text-gray lg:text-[22px]">{rev.review}</p>
					</div>
			)
		})
		}
		</div>
	</div>
	</section>
	
	<!-- Experience Section -->
	<section class="w-full bg-primary-300 px-12 xl:px-0 mx-auto mt-[100px] lg:mt-[200px] py-[151px]">
		<div class="w-full max-w-[1200px] mx-auto flex lg:justify-center items-center overflow-x-scroll no-scrollbar">
			{
				experiences.map((exp, i) => {
					return(
						<Experience text={exp.text} num={exp.num} i={i} client:load />
					)
				})
			}
		</div>
	</section>
</MainLayout>
 

<style>

  /* Hide scrollbar for Chrome, Safari and Opera */
  .no-scrollbar::-webkit-scrollbar {
      display: none;
  }

  /* Hide scrollbar for IE, Edge and Firefox */
  .no-scrollbar {
      -ms-overflow-style: none;  /* IE and Edge */
      scrollbar-width: none;  /* Firefox */
  }

</style>